<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">


    <record id="crm_lead_product_comp_rule" model="ir.rule">
        <field name="name">CRM Order Line multi-company</field>
        <field name="model_id" ref="model_crm_lead_product"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
    <record id="crm_lead_product_personal_rule" model="ir.rule">
        <field name="name">CRM Personal Order Lines</field>
        <field ref="zero_crm_product.model_crm_lead_product" name="model_id"/>
        <field name="domain_force">['|',('salesman_id','=',user.id),('salesman_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>

    <record id="crm_lead_product_rule_portal" model="ir.rule">
        <field name="name">Portal CRM Orders Line</field>
        <field name="model_id" ref="zero_crm_product.model_crm_lead_product"/>
        <field name="domain_force">[('lead_id.message_partner_ids','child_of',[user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <record id="crm_lead_product_see_all" model="ir.rule">
        <field name="name">All Orders Lines</field>
        <field ref="zero_crm_product.model_crm_lead_product" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
    </record>


</odoo>
